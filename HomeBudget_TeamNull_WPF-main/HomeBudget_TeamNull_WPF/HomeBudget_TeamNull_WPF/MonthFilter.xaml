        <Grid.RowDefinitions>
            <RowDefinition Height="63*" />
            <RowDefinition Height="153*" />
            <RowDefinition Height="191*" />
            <RowDefinition Height="27*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="39*" />
            <ColumnDefinition Width="361*" />
            <ColumnDefinition Width="352*" />
            <ColumnDefinition Width="48*" />
        </Grid.ColumnDefinitions>

        <Label Grid.Column="1" Grid.ColumnSpan="2" Margin="181,0,172,0" HorizontalAlignment="Center"
               VerticalAlignment="Center" FontSize="18" FontWeight="Bold">
            Expenses filtered By month selected</Label>
        <DataGrid AutoGenerateColumns="False" x:Name="datagrid" IsReadOnly="True" Grid.Row="1" Grid.RowSpan="2" Grid.Column="1" Grid.ColumnSpan="2" />
    </Grid>
</Window>