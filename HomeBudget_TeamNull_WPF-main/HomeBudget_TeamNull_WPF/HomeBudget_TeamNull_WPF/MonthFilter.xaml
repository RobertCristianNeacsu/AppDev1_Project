        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="MonthFilter" Height="526" Width="880" WindowStartupLocation="CenterScreen"
        Background="#F6E7CB" Icon="/small icon.png">
